<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.cooktail">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cooktail_icon_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsCocktail"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".About"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".ByNameSearch"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".ByIngredientSearch"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".ByIngredientResult"
            android:parentActivityName=".ByIngredientSearch">
        </activity>
    </application>

</manifest>