<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/TV_labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nom: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_contentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[contentName]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelName"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelName" />

    <TextView
        android:id="@+id/TV_labelCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Category: "
        app:layout_constraintStart_toStartOf="@+id/TV_labelName"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentName" />

    <TextView
        android:id="@+id/TV_contentCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Category]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelCategory"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelCategory" />

    <TextView
        android:id="@+id/TV_labelAlcoholic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Alcoholic ?"
        app:layout_constraintStart_toStartOf="@+id/TV_contentCategory"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentCategory" />

    <TextView
        android:id="@+id/TV_contentAlchoholic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Yes or No]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelAlcoholic"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelAlcoholic" />

    <TextView
        android:id="@+id/TV_labelGlassType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Glasse Type: "
        app:layout_constraintStart_toStartOf="@+id/TV_contentAlchoholic"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentAlchoholic" />

    <TextView
        android:id="@+id/TV_contentGlassType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Glasse Type]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelGlassType"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelGlassType" />

    <TextView
        android:id="@+id/TV_labelTages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tags: "
        app:layout_constraintStart_toStartOf="@+id/TV_contentGlassType"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentGlassType" />

    <TextView
        android:id="@+id/TV_contentTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Tags]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelTages"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelTages" />

    <TextView
        android:id="@+id/TV_labelInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Instructions: "
        app:layout_constraintStart_toStartOf="@+id/TV_contentTags"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentTags" />

    <TextView
        android:id="@+id/TV_contentInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Instrucitons]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelInstructions"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelInstructions" />

    <TextView
        android:id="@+id/TV_labelIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ingredients: "
        app:layout_constraintStart_toStartOf="@+id/TV_contentInstructions"
        app:layout_constraintTop_toBottomOf="@+id/TV_contentInstructions" />

    <TextView
        android:id="@+id/TV_contentIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Ingredients]"
        app:layout_constraintStart_toStartOf="@+id/TV_labelIngredients"
        app:layout_constraintTop_toBottomOf="@+id/TV_labelIngredients" />
</androidx.constraintlayout.widget.ConstraintLayout>